@if (Violations.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 60px">ID</th>
                <th>Заявка</th>
                <th>Пользователь</th>
                <th>Описание</th>
                <th>Дата создания</th>
                <th>Дата изменения</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var src in Violations)
            {
                <tr>
                    <td>@src.Id</td>
                    <td>@src.Title</td>
                    <td><a href="#">@src.UserID</a></td>
                    <td>
                        @src.Description
                    </td>
                    <td>@src.CreatedAt</td>
                    <td>@src.UpdatedAt</td>
                    <td>
                        @switch (src.Status)
                        {
                            case "Принята":
                                <span class="badge bg-danger">

                                    Принята

                                </span>
                                break;
                            case "Проверка":
                                <span class="badge bg-blue">

                                    Проверка

                                </span>
                                break;
                            case "Рассмотрение":
                                <span class="badge bg-warning">

                                    Рассмотрение

                                </span>
                                break;
                            case "":
                                <span class="badge bg-success">

                                    Закрыта

                                </span>
                                break;

                        }

                    </td>
                    <td class="project-actions text-right">

                        <a class="btn btn-success btn-sm" href="#">
                            <i class="fas fa-eye">
                            </i>
                            Рассмотреть
                        </a>
                        <button @onclick="()=>Delete(src.Id.ToString())" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash">
                            </i>
                            Удалить
                        </button>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <p>Страница загружается</p>
}
